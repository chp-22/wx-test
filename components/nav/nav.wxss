/* components/nav/nav.wxss */
.nav_container{
  width: 100%;
  height: 100rpx;
  position:fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  padding: 10rpx 0;
  box-sizing: border-box;
  border-top: 2rpx solid #E9E9E9;
}
.nav_item{
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 24rpx;
}
.nav_item image{
  width: 40rpx;
  height: 40rpx;
}